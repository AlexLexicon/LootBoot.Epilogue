<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Components_DebugConsole_GRIDSPLITTER" TargetType="{x:Type GridSplitter}">
        <Setter Property="Background" Value="{StaticResource CONSOLE_FOREGROUND}"/>
    </Style>
    <Style x:Key="Components_DebugConsole_Vertical_GRIDSPLITTER" TargetType="{x:Type GridSplitter}" BasedOn="{StaticResource Components_DebugConsole_GRIDSPLITTER}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Width" Value="4"/>
    </Style>
    <Style x:Key="Components_DebugConsole_Horizontal_GRIDSPLITTER" TargetType="{x:Type GridSplitter}" BasedOn="{StaticResource Components_DebugConsole_GRIDSPLITTER}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Height" Value="4"/>
    </Style>

</ResourceDictionary>